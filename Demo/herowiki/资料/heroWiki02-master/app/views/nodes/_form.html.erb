<div class="container">
  <div class="row">
    <div class="col-md-8">
		<%= simple_form_for(@node) do |f| %>
		  <%= f.error_notification %>

		  <div class="form-inputs">
		    <%= f.input :name %>
		  </div>
		  <div class="form-inputs">
		    <%= f.input :summary %>
		  </div>

		  <div class="form-actions">
		    <%= f.button :submit %>
		  </div>
		<% end %>
	</div>
  </div>
</div>