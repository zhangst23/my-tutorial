<p id="notice"><%= notice %></p>

<ol class="breadcrumb">
  <li><a href="/">首页</a></li>
  <li class="active">节点</li>
</ol>

<div class="container">
	<div class="row">
		<div class="col-md-8">
			<h3>
			  <strong>Name:</strong>
			  <%= @node.name %>
			  <br>	
			  <strong>一句话描述:</strong>
			  <%= @node.summary %>
				<br>
				<br>
				<%= link_to 'Edit', edit_node_path(@node) %> |
				<%= link_to 'Back', nodes_path %>
			</h3>
			<br>
			<br>
		</div>
	</div>
</div>


<div class="mainbox">
<div class="container">
  <div class="row">
    <% @heros.node_id.each do |hero| %>
    <div class="col-xs-6 col-md-3">
      <br>     
      <div class="thumbnail">
        <%= image_tag hero.image %>
        <div class="caption">       
          <h3><%= hero.name %></h3>
          <p><%= link_to '详细', hero_path(hero), class: "btn btn-primary", role: "button" %></p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>

</div>